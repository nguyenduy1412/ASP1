@model  List<WebApplication3.Models.Product>


<!doctype html>
<html lang="en">

<head>
    <title>Title</title>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css"
          integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <style>
        .row hr {
            width: 20px;
            background-color: red;
            height: 5px;
        }

        .card {
            overflow: hidden;
        }

        .product:hover .hover {
            display: block;
        }

        .btnshop {
            background-color: rgb(26,31,43);
            color: white;
            padding: 5px;
            bottom: 0;
            width: 100%;
            position: absolute;
            text-align: center;
            font-weight: bold;
        }

        .favorite {
            position: absolute;
            top: 10px;
            right: 15px;
        }

        .sale {
            width: 40px;
            height: 40px;
            margin-top: 10px;
            position: absolute;
            color: white;
            background-color: rgb(215,40,40);
            align-items: center;
            justify-content: center;
            display: flex;
            border-radius: 50%;
            left: 5px;
        }

        .hover {
            display: none;
        }

        .color-gray {
            color: gray;
        }
        .iconfa {
            border-radius: 50%;
            background-color: white;
            width: 30px;
            height: 30px;
            margin-bottom: 5px;
            align-items: center;
            justify-content: center;
            display: flex;
        }
    </style>
</head>

<body>
    <div class="container">
        <div class="row  pl-3 pt-3 d-flex justify-content-between align-items-center">
            <div class="d-flex justify-content-start">
                <div><hr></div>
                <button class="btn  font-weight-bold mr-3">NEW PRODUCT</button>
                <button class="btn  font-weight-bold color-gray  mr-3"> @Html.ActionLink("ON SALE", "Create") </button>
                <button class="btn color-gray font-weight-bold mr-3">FEATURED PRODUCT</button>
            </div>
            <div class="pr-5">
                <i class=" color-gray fa-solid fa-chevron-left"></i>
                <i class=" color-gray fa-solid fa-chevron-right"></i>
            </div>
        </div>
        <hr>
        <div class="row">
            @{
                for (int i = 0; i<Model.Count; i++)
                {
                    <div class="col-lg-3 product">
                                    <div class="card">
                                        <div style="position: relative;">
                                            <img class="card-img-top" src="@Model[i].Image"
                                                 alt="Card image cap">
                                            <div class="hover">
                                                <div class="favorite">
                                                    <div class="iconfa"><i class="fa-regular fa-heart"></i></div>
                                                    <div class="iconfa"><i class="fa-solid fa-eye"></i></div>
                                                </div>
                                                <a href="#" class="btnshop">ADD TO CART</a>
                                            </div>

                                        </div>

                                        <div class="card-body">
                                            <div class="d-flex justify-content-center">
                                                <h6 class="card-title text-danger mr-2">$@Model[i].PriceSale</h6>
                                                @{
                                                    if (Model[i].Sale !=0)
                                                    {
                                                        <span class="card-title color-gray "> <del>$@Model[i].Price</del> </span>
                                                    }
                                                }
                                                
                                            </div>
                                            <p class="card-text text-center">@Model[i].Name</p>



                                        </div>

                                        @{
                                            if (Model[i].Sale !=0)
                                            {
                                                <div class="sale">
                                                    <span>@Model[i].Sale%</span>
                                                </div>
                                            }
                                        }
                                      

                                    </div>
                    </div>
                }
            }

        </div>
    </div>
    <div class="square">

    </div>
    <!-- Optional JavaScript -->
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"
            integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo"
            crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"
            integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1"
            crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"
            integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM"
            crossorigin="anonymous"></script>
</body>

</html>
